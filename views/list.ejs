<%- include("header") %>
<div class="box" id="heading">
    <h1><%= pageName %> </h1>
</div>
<div class="box">
    <% for( let index = 0; index < items.length; index++ ) { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= items[index]._id %>" onchange="this.form.submit()">
            <input type="hidden" name="pageName" value="<%= pageName %>" />
            <p><%= items[index].name %> </p>
        </div>
    </form>
    <% } %>

    <form action="/" method="post">
        <input type="text" name="task" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" , value=<%= pageName %>>+</button>
    </form>
</div>

<%- include("footer") %>